<form action="/categories/create" method="POST" class="w-75 m-auto p-4 shadow mt-3">
    <h1>New Category</h1>
    <input type="text" id="name" name="name" placeholder="Category Name" required class="form-control mb-3">
    <textarea id="description" name="description" placeholder="Description" required class="form-control mb-3"></textarea>
    <button type="submit" class="btn btn-primary">Create Category</button>
</form>

