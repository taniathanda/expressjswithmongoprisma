<h3 class="text-center text-danger my-4">My categories List</h3>
<div class="w-75 m-auto p-4 mt-4">
    <% categories.forEach(category => { %>
     <div class="shadow m-3 p-4">
        <h4 class="my-color"><%= category.name %></h4>
        <p><%= category.description %></p>
        <a href="/categories/edit/<%= category.id %>" class="btn btn-primary">Edit</a>
        <form action="/categories/delete/<%= category.id %>" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
     </div>
    <% }) %>
</div>